{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2018",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "lf",
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/tmp/main-build.tsbuildinfo",
    "esModuleInterop": true
  },
  "include": ["src/main/**/*", "src/common/**/*"],
  "exclude": ["node_modules"]
}
