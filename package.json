{
	"name": "app-name",
	"productName": "App Name",
	"version": "0.0.0",
	"description": "DESC",
	"license": "MIT",
	"repository": "github.com/mgenware/electron-boilerplate",
	"author": "Mgen",
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"test": "yarn lint",
		"dev": "yarn dev-build && electron ./dist/main.js && yarn watch-build",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np",
		"lint": "eslint --max-warnings 0 --ext .ts src/ tests/",
		"clean": "del-cli dist && del-cli dist_tests",
		"dev-build": "yarn run clean && tsc -b src",
		"watch-build": "tsc -b src -w"
	},
	"dependencies": {
		"electron-context-menu": "^2.0.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.14.1"
	},
	"devDependencies": {
		"@types/node": "^12",
		"del-cli": "^3.0.0",
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"typescript": "^3.8.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.company.AppName",
		"mac": {
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	}
}
