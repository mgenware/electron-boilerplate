{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2018",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "lf",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
